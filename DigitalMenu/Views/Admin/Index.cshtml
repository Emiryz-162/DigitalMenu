@{
    ViewData["Title"] = "Admin Paneli";
    var settings = ViewBag.Settings as DigitalMenu.Models.Settings;
}

<!-- Dark Admin Navbar -->
<nav class="admin-navbar-dark">
    <div class="container-fluid px-3">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div>
                <h3 class="text-white mb-0 fs-5">
                    <i class="bi bi-speedometer2 me-2"></i>
                    <span class="d-none d-md-inline">@(settings?.RestaurantName ?? "Admin") Paneli</span>
                    <span class="d-inline d-md-none">Panel</span>
                </h3>
            </div>
            <div class="d-flex gap-2 align-items-center">
                <span class="text-white-50 small d-none d-sm-inline">
                    <i class="bi bi-person-circle me-1"></i>Admin
                </span>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-light-dark btn-sm">
                    <i class="bi bi-box-arrow-right me-1"></i>
                    <span class="d-none d-sm-inline">Çıkış</span>
                </a>
            </div>
        </div>
    </div>
</nav>

<div class="admin-container-dark">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success-dark alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger-dark alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Hoş Geldiniz -->
    <div class="admin-card-dark mb-4">
        <h2 class="text-white mb-2 fs-4">
            <i class="bi bi-house-fill me-2"></i>Hoş Geldiniz
        </h2>
        <p class="text-white-60 mb-0">@(settings?.RestaurantName ?? "Restoran") dijital menü yönetim paneli</p>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="stat-card-dark stat-card-purple">
                <i class="bi bi-grid-3x3-gap stat-icon"></i>
                <h3 class="stat-number">@ViewBag.CategoryCount</h3>
                <p class="stat-label">Kategori</p>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card-dark stat-card-blue">
                <i class="bi bi-box-seam stat-icon"></i>
                <h3 class="stat-number">@ViewBag.ProductCount</h3>
                <p class="stat-label">Ürün</p>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card-dark stat-card-red">
                <i class="bi bi-chat-left-text-fill stat-icon"></i>
                <h3 class="stat-number">@ViewBag.ComplaintCount</h3>
                <p class="stat-label">Şikayet</p>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card-dark stat-card-green">
                <i class="bi bi-eye-fill stat-icon"></i>
                <h3 class="stat-number">@ViewBag.VisitCount</h3>
                <p class="stat-label">Toplam Ziyaret</p>
                <small class="stat-small">Bugün: @ViewBag.TodayVisitCount</small>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim -->
    <div class="admin-card-dark">
        <h4 class="text-white mb-4 fs-5">
            <i class="bi bi-lightning-charge-fill me-2"></i>Hızlı Erişim
        </h4>
        <div class="row g-3">
            <div class="col-6 col-md-3">
                <a asp-action="Categories" class="quick-link-dark quick-link-purple">
                    <i class="bi bi-grid-3x3-gap quick-icon"></i>
                    <span>Kategoriler</span>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Complaints" class="quick-link-dark quick-link-red">
                    <i class="bi bi-chat-left-text-fill quick-icon"></i>
                    <span>Şikayetler</span>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a asp-action="Settings" class="quick-link-dark quick-link-green">
                    <i class="bi bi-gear-fill quick-icon"></i>
                    <span>Ayarlar</span>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Home" asp-action="Index" target="_blank" class="quick-link-dark quick-link-blue">
                    <i class="bi bi-eye-fill quick-icon"></i>
                    <span>Menüyü Gör</span>
                </a>
            </div>
        </div>
    </div>
</div>