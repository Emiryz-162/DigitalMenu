@model IEnumerable<DigitalMenu.Models.Complaint>
@{
    ViewData["Title"] = "Şikayet & Öneriler";
}

<!-- Dark Admin Navbar -->
<nav class="admin-navbar-dark">
    <div class="container-fluid px-3">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <h3 class="text-white mb-0 fs-5">
                <i class="bi bi-chat-left-text-fill me-2"></i>
                <span class="d-none d-md-inline">Şikayet & Öneriler</span>
                <span class="d-inline d-md-none">Şikayetler</span>
            </h3>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-light-dark btn-sm">
                    <i class="bi bi-house-fill me-1"></i>
                    <span class="d-none d-sm-inline">Ana Sayfa</span>
                </a>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-light-dark btn-sm">
                    <i class="bi bi-box-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</nav>

<div class="admin-container-dark">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success-dark alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger-dark alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="text-white mb-1">
                <i class="bi bi-list-ul me-2"></i>Tüm Şikayetler
            </h4>
            <p class="text-white-60 small mb-0">Toplam @Model.Count() şikayet/öneri</p>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Şikayet Listesi - Kart Yapısı -->
        <div class="complaint-list-dark">
            @foreach (var complaint in Model)
            {
                <div class="complaint-card-dark @(complaint.IsRead ? "" : "complaint-unread")">
                    <!-- Tıklanabilir Alan (Görüntüleme) -->
                    <a asp-action="ComplaintDetail" asp-route-id="@complaint.Id" class="complaint-clickable-area">
                        <!-- İkon (Okundu/Okunmadı) -->
                        <div class="complaint-icon">
                            @if (!complaint.IsRead)
                            {
                                <i class="bi bi-eye-slash-fill text-danger"></i>
                            }
                            else
                            {
                                <i class="bi bi-eye-fill text-success"></i>
                            }
                        </div>

                        <!-- Başlık ve Bilgiler -->
                        <div class="complaint-info">
                            <div class="complaint-subject">
                                @complaint.Subject
                                @if (!complaint.IsRead)
                                {
                                    <span class="badge-new-mini">YENİ</span>
                                }
                            </div>
                            <div class="complaint-details">
                                <span class="complaint-sender">@complaint.FullName</span>
                                <span class="complaint-date">@complaint.CreatedDate.ToString("dd.MM.yyyy HH:mm")</span>
                            </div>
                        </div>
                    </a>

                    <!-- Sil Butonu -->
                    <div class="complaint-delete">
                        <form asp-action="DeleteComplaint" asp-route-id="@complaint.Id"
                              method="post"
                              onsubmit="return confirm('Bu şikayeti silmek istediğinizden emin misiniz?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn-delete-dark" title="Sil">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state-dark">
            <i class="bi bi-inbox"></i>
            <p>Henüz hiç şikayet veya öneri gelmemiş.</p>
        </div>
    }
</div>