<!-- Ürün Detay Modal -->
<div class="modal fade" id="productDetailModal" tabindex="-1" aria-labelledby="productDetailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div class="row g-0">
                    <!-- Ürün Görseli -->
                    <div class="col-md-6">
                        <img id="modalProductImage" src="" alt="" class="img-fluid w-100" style="height: 400px; object-fit: cover;">
                    </div>

                    <!-- Ürün Bilgileri -->
                    <div class="col-md-6 p-4">
                        <h3 id="modalProductName" class="mb-3"></h3>

                        <div class="mb-3">
                            <span class="badge bg-success fs-4" id="modalProductPrice"></span>
                        </div>

                        <div id="modalProductCaloriesSection" class="mb-3" style="display: none;">
                            <div class="d-flex align-items-center text-muted">
                                <i class="bi bi-fire me-2 fs-5 text-danger"></i>
                                <span id="modalProductCalories" class="fs-5"></span>
                            </div>
                        </div>

                        <hr>

                        <div class="mb-3">
                            <h6 class="text-muted mb-2">
                                <i class="bi bi-card-text me-2"></i>Açıklama
                            </h6>
                            <p id="modalProductDescription" class="mb-0" style="white-space: pre-wrap;"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <button type="button" class="btn btn-secondary btn-lg px-5" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Kapat
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function openProductModal(element) {
        // Data attributelerinden bilgileri al
        const name = element.getAttribute('data-product-name');
        const price = element.getAttribute('data-product-price');
        const description = element.getAttribute('data-product-description');
        const calories = element.getAttribute('data-product-calories');
        const imagePath = element.getAttribute('data-product-image');

        // Modal elemanlarını doldur
        document.getElementById('modalProductImage').src = imagePath;
        document.getElementById('modalProductImage').alt = name;
        document.getElementById('modalProductName').textContent = name;
        document.getElementById('modalProductPrice').textContent = price;
        document.getElementById('modalProductDescription').textContent = description;

        // Kalori bilgisi varsa göster
        const caloriesSection = document.getElementById('modalProductCaloriesSection');
        const caloriesText = document.getElementById('modalProductCalories');

        if (calories && calories !== '' && parseInt(calories) > 0) {
            caloriesText.textContent = calories + ' kcal';
            caloriesSection.style.display = 'block';
        } else {
            caloriesText.textContent = '- kcal';
            caloriesSection.style.display = 'block';
        }

        // Modal'ı aç
        const modal = new bootstrap.Modal(document.getElementById('productDetailModal'));
        modal.show();
    }
</script>