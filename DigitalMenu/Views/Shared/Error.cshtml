@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center"
     style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div class="text-center text-white">
        <h1 class="display-1 fw-bold">Oops!</h1>
        <h2 class="mb-4">Bir hata oluştu</h2>
        <p class="lead">Üzgünüz, bir sorun oluştu. Lütfen daha sonra tekrar deneyin.</p>

        @if (Model?.RequestId != null)
        {
            <p class="small">
                <strong>İstek ID:</strong> @Model.RequestId
            </p>
        }

        <div class="mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-light btn-lg">
                <i class="bi bi-house-fill me-2"></i>Ana Sayfaya Dön
            </a>
        </div>
    </div>
</div>